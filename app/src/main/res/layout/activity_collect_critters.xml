<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.sun.biologyproject.activity.CollectCrittersActivity">
    <RelativeLayout
        android:id="@+id/relative_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_label">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relative_title">
    </android.support.v4.view.ViewPager>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_title"
        android:src="@drawable/ic_help"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <Button
        android:id="@+id/bt_go_to_collect"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_collected_blue_strip"
        android:text="前往鉴别水生生物"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:visibility="invisible"/>
</RelativeLayout>
